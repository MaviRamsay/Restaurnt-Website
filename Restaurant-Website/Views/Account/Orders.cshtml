@model IEnumerable<Restaurant_Website.Models.Account.OrderViewModel> 

<section class="u-clearfix u-white u-section-1" id="carousel_7d84">
    <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-expanded-width u-table u-table-responsive u-table-1">
            @if (Model.Count() > 0)
            {
                <table class="u-table-entity">
                    <thead class="u-align-center u-table-header u-table-header-1">
                        <tr style="height: 45px;">
                            <th class="u-table-cell"></th>
                            <th class="u-table-cell">Product</th>
                            <th class="u-table-cell">Total price (peace price)</th>
                            <th class="u-table-cell">Payment type</th>
                            <th class="u-table-cell">Delivery address</th>
                            <th class="u-table-cell">Date</th>
                        </tr>
                    </thead>

                    <tbody class="u-align-center u-table-body">
                        @{
                            int i = 0;
                            foreach (var item in Model)
                            {
                                <tr style="height: 112px;">
                                    <td class="u-black u-first-column u-table-cell u-table-cell-7">@(++i)</td>
                                    <td class="u-table-cell">
                                        <a href="Product.html" data-page-id="46943722" class="u-active-none u-border-none u-btn u-button-link u-button-style u-hover-none u-none u-text-palette-1-base u-btn-1">@item.Product.Name</a>
                                    </td>
                                    <td class="u-border-1 u-border-active-palette-2-base u-border-hover-palette-1-base u-btn-rectangle u-none u-table-cell u-text-palette-1-base u-table-cell-9">@item.Total (@item.Product.Price)</td>
                                    <td class="u-table-cell">@(item.PaymentType ? "Offline" : "Online") </td>
                                    <td class="u-table-cell">@item.Address</td>
                                    <td class="u-table-cell">@item.Date.ToString("dd MMMM, yyyy, dddd")</td>
                                </tr>
                            }
                        }
                    
                    </tbody>
                </table>
            }
            else
            {
                <h3>You don't have an orders</h3>
            }
        </div>
    </div>
</section>